<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Algolia" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:elevation">6dp</item>
        <item name="android:background">@color/white</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
    </style>

    <style name="Icon">
        <item name="android:padding">4dp</item>
        <item name="android:tint">@color/grey_dark</item>
    </style>

    <style name="Icon.Clickable">
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="voiceIcon">@null</item>
        <item name="searchIcon">@null</item>
        <item name="android:maxWidth">1000dp</item>
        <item name="closeIcon">@drawable/ic_close_hint</item>
        <item name="queryBackground">@drawable/query_background</item>
    </style>

    <color name="grey_dark">#4e5561</color>
</resources>