<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/padding_10">
        <com.rasmishopping.app.customviews.MageNativeTextView
            android:id="@+id/sort_by"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_35"
            android:buttonTint="@color/black"
            android:tag="featured"
            android:text="@string/sort_heading"
            app:radiotype="bold" />
        <com.rasmishopping.app.customviews.MageNativeRadioButton
            android:id="@+id/featured"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_35"
            android:buttonTint="@color/black"
            android:tag="featured"
            android:text="@string/featured"
            app:radiotype="bold" />

        <com.rasmishopping.app.customviews.MageNativeRadioButton
            android:id="@+id/best_selling"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_35"
            android:buttonTint="@color/black"
            android:tag="bestseller"
            android:text="@string/best_selling"
            app:radiotype="bold" />
        <com.rasmishopping.app.customviews.MageNativeRadioButton
            android:id="@+id/atoz"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_35"
            android:buttonTint="@color/black"
            android:tag="atoz"
            android:text="@string/atoz"
            app:radiotype="bold" />

        <com.rasmishopping.app.customviews.MageNativeRadioButton
            android:id="@+id/ztoa"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_35"
            android:buttonTint="@color/black"
            android:tag="ztoa"
            android:text="@string/ztoa"
            app:radiotype="bold" />

        <com.rasmishopping.app.customviews.MageNativeRadioButton
            android:id="@+id/htol"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_35"
            android:buttonTint="@color/black"
            android:tag="htol"
            android:text="@string/htol"
            app:radiotype="bold" />

        <com.rasmishopping.app.customviews.MageNativeRadioButton
            android:id="@+id/ltoh"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_35"
            android:buttonTint="@color/black"
            android:tag="ltoh"
            android:text="@string/ltoh"
            app:radiotype="bold" />
        <com.rasmishopping.app.customviews.MageNativeRadioButton
            android:id="@+id/oton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_35"
            android:buttonTint="@color/black"
            android:tag="oton"
            android:text="@string/oton"
            app:radiotype="bold" />

        <com.rasmishopping.app.customviews.MageNativeRadioButton
            android:id="@+id/ntoo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_35"
            android:buttonTint="@color/black"
            android:tag="ntoo"
            android:text="@string/ntoo"
            app:radiotype="bold" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>



