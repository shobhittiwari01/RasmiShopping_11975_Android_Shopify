<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="commondata"
            type="com.rasmishopping.app.basesection.models.CommanModel" />
        <variable
            name="listdata"
            type="com.rasmishopping.app.basesection.models.ListData" />
        <variable
            name="handler"
            type="com.rasmishopping.app.quickadd_section.activities.QuickAddActivity.VariantClickHandler" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".quickadd_section.activities.QuickAddActivity">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/container1">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/imagesection"
                app:cardCornerRadius="2dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintDimensionRatio="H,1:1.3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/name"
                android:layout_marginStart="12dp"
                app:layout_constraintHorizontal_weight="2"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/image"
                    imageUrl="@{commondata.imageurl}"
                    />
            </androidx.cardview.widget.CardView>
            <com.rasmishopping.app.customviews.MageNativeTextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/imagesection"
                app:layout_constraintEnd_toStartOf="@+id/close_but"
                android:layout_marginEnd="@dimen/margin_end_2"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_weight="8"
                android:maxLines="2"
                android:textAlignment="viewStart"
                android:gravity="start|center_vertical"
                android:text="@{listdata.textdata}"
                app:texttype="productlistname"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/close_but"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:onClick="@{view->handler.closeDialog(view)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/name"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="12dp"
                app:srcCompat="@drawable/close_icon" />
            <com.rasmishopping.app.customviews.MageNativeTextView
                android:id="@+id/specialprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:gravity="start|center_vertical"
                android:text="@{listdata.specialprice}"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@+id/imagesection"
                android:layout_marginEnd="@dimen/margin_end_2"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:texttype="productlistspecialprice" />
            <com.rasmishopping.app.customviews.MageNativeTextView
                android:id="@+id/regularprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_end_2"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:text="@{listdata.regularprice}"
                app:layout_constraintStart_toEndOf="@+id/specialprice"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:texttype="productlistnormalprice" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/optionlist"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/container1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/optionlist">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/shadow"
                android:background="@drawable/toolbar_dropshadow"
                android:alpha="0.5"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:id="@+id/cartcontainer"
                android:background="@drawable/newcartround"
                android:onClick="@{view->handler.addcart(view)}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="35dp"
                    android:layout_height="25dp"
                    android:id="@+id/bagicon"
                    android:src="@drawable/cartwhite"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/addCart"/>
                <com.rasmishopping.app.customviews.MageNativeTextView
                    android:id="@+id/addCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/addtocart"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:texttype="productlistaddtocart"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottomsection"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/wishlistsection"
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight=".15"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:onClick="@{view->handler.addtowish(view)}"
                    android:background="@drawable/wishlist_round"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginEnd="8dp"
                    android:padding="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/cartsection">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/wishdisable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_wishlist_disable"
                        app:layout_constraintTop_toTopOf="parent" />
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/wishenable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:src="@drawable/ic_heart_product"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/cartsection"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:layout_goneMarginStart="8dp"
                    app:layout_goneMarginEnd="8dp"
                    android:background="@drawable/round"
                    android:gravity="center"
                    app:layout_constraintHorizontal_weight=".45"
                    android:onClick="@{view->handler.addcart(view)}"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/buynowsection"
                    app:layout_constraintStart_toEndOf="@+id/wishlistsection"
                    app:layout_constraintTop_toTopOf="parent">
                    <com.rasmishopping.app.customviews.MageNativeTextView
                        android:id="@+id/addtocart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/addtocart"
                        app:texttype="newcarttext" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/buynowsection"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/round"
                    android:onClick="@{view->handler.buynow(view)}"
                    app:layout_constraintHorizontal_weight=".45"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/cartsection">
                    <com.rasmishopping.app.customviews.MageNativeTextView
                        android:id="@+id/buynow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/buynow"
                        app:texttype="carttextt" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

