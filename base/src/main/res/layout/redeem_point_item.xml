<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/padding_8">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rupee_one"
            android:layout_width="@dimen/width_50"
            android:layout_height="@dimen/height_50"
            android:layout_marginStart="@dimen/margin_start_8"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/rupee" />

        <com.rasmishopping.app.customviews.MageNativeTextView
            android:id="@+id/optiontitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_10"
            android:layout_marginTop="@dimen/margin_top_15"
            android:textAlignment="viewStart"
            android:gravity="start|center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rupee_one"
            app:layout_constraintTop_toTopOf="parent"
            app:texttype="bold" />

        <com.rasmishopping.app.customviews.MageNativeTextView
            android:id="@+id/optionpoint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_10"
            android:layout_marginTop="@dimen/margin_top_10"
            android:textAlignment="viewStart"
            android:gravity="start|center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/rupee_one"
            app:layout_constraintTop_toBottomOf="@+id/optiontitle"
            app:texttype="normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/margin_top_15"
            android:background="@color/gray_btn_bg_color"
            app:layout_constraintTop_toBottomOf="@+id/optionpoint" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
