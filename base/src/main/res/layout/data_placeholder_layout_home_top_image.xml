<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_top_20"
    android:layout_marginLeft="@dimen/margin_left_10"
    >

    <View
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/width_60"
        android:layout_height="@dimen/height_60"
        android:layout_alignStart="@+id/thumbnail5"
        android:layout_marginTop="@dimen/margin_top_10"
        android:layout_marginRight="@dimen/margin_right_16"
        android:background="#dddddd" />

    <View
        android:id="@+id/thumbnail1"
        android:layout_width="@dimen/width_60"
        android:layout_height="@dimen/height_60"
        android:layout_marginTop="@dimen/margin_top_10"
        android:layout_marginRight="@dimen/margin_right_16"
        android:layout_toEndOf="@+id/thumbnail"
        android:background="#dddddd" />

    <View
        android:id="@+id/thumbnail2"
        android:layout_width="@dimen/width_60"
        android:layout_height="@dimen/height_60"
        android:layout_marginTop="@dimen/margin_top_10"
        android:layout_marginRight="@dimen/margin_right_16"
        android:layout_toEndOf="@+id/thumbnail1"
        android:background="#dddddd" />

    <View
        android:id="@+id/thumbnail3"
        android:layout_width="@dimen/width_60"
        android:layout_height="@dimen/height_60"
        android:layout_marginTop="@dimen/margin_top_10"
        android:layout_marginRight="@dimen/margin_right_16"
        android:layout_toEndOf="@+id/thumbnail2"
        android:background="#dddddd" />

    <View
        android:id="@+id/thumbnail4"
        android:layout_width="@dimen/width_60"
        android:layout_height="@dimen/height_60"
        android:layout_marginTop="@dimen/margin_top_10"
        android:layout_marginRight="@dimen/margin_right_16"
        android:layout_toEndOf="@+id/thumbnail3"
        android:background="#dddddd" />

    <View
        android:id="@+id/thumbnail5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_200"
        android:layout_below="@+id/thumbnail2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/margin_10"
        android:background="#dddddd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thumbnail5"
        android:layout_alignStart="@+id/thumbnail5"
        android:layout_toRightOf="@id/thumbnail"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/width_150"
            android:layout_height="@dimen/height_16"
            android:background="#dddddd" />

        <View
            android:layout_width="@dimen/width_100"
            android:layout_height="@dimen/height_16"
            android:layout_marginTop="@dimen/margin_top_5"
            android:background="#dddddd" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_200"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_top_5"
            android:background="#dddddd" />

        <View
            android:layout_width="@dimen/width_150"
            android:layout_height="@dimen/height_16"
            android:layout_marginTop="@dimen/margin_10"
            android:background="#dddddd" />

        <View
            android:layout_width="@dimen/width_100"
            android:layout_height="@dimen/height_16"
            android:layout_marginTop="@dimen/margin_top_5"
            android:background="#dddddd" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_200"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_top_5"
            android:background="#dddddd" />
    </LinearLayout>
</RelativeLayout>