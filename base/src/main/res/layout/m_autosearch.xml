<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="features"
            type="com.rasmishopping.app.basesection.models.FeaturesModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nodata"
            android:visibility="gone"
            android:background="@color/white"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintBottom_toTopOf="@+id/nocarttext"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/no_search"
                android:layout_marginBottom="50dp"
                android:id="@+id/nocartback"/>
            <com.rasmishopping.app.customviews.MageNativeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:texttype="nocarttext"
                android:layout_margin="20dp"
                android:text="@string/nosearch"
                android:id="@+id/nocarttext"/>
            <com.rasmishopping.app.customviews.MageNativeTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:texttype="emptystring"
                app:layout_constraintTop_toBottomOf="@+id/nocarttext"
                android:text="@string/emptysearch"
                android:layout_margin="10dp"
                android:id="@+id/emptystring"/>
            <com.rasmishopping.app.customviews.MageNativeTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:gravity="center"
                app:texttype="nodata"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@+id/emptystring"
                android:text="@string/continue_shopping"
                android:id="@+id/continue_shopping"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/content"
            android:visibility="visible">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                android:id="@+id/advancesearch">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/gradient"
                    app:layout_constraintHorizontal_weight="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="5dp"
                    app:layout_constraintEnd_toStartOf="@+id/brcodesearch"
                    android:id="@+id/imagesearch">
                    <com.rasmishopping.app.customviews.MageNativeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_image_search"
                        android:text="@string/takephoto"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:texttype="advancesearch"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_camera"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/text_image_search"
                        android:layout_marginEnd="5dp"
                        android:id="@+id/icon_image_search"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_weight="0.5"
                    android:background="@drawable/gradient"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintStart_toEndOf="@+id/imagesearch"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/brcodesearch">
                    <com.rasmishopping.app.customviews.MageNativeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_barcode_search"
                        android:text="@string/qrcode"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:texttype="advancesearch"/>
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_scan"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/text_barcode_search"
                        android:layout_marginEnd="5dp"
                        android:id="@+id/icon_barcode_search"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recentsearchsection"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent">
                <com.rasmishopping.app.customviews.MageNativeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/recentsearchheading"
                    app:texttype="recentsearchheading"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="16dp"
                    android:text="@string/recent_search"/>
                <com.rasmishopping.app.customviews.MageNativeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clearrecentsearch"
                    app:texttype="clearrecentsearch"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="16dp"
                    android:text="@string/clear_all"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/recentsearch"
                    app:layout_constraintBottom_toTopOf="@+id/line"
                    app:layout_constraintTop_toBottomOf="@+id/recentsearchheading"
                    android:layout_margin="16dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D1D1D1"
                    android:id="@+id/line"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.rasmishopping.app.customviews.MageNativeEditText
                android:id="@+id/searchtext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_50"
                android:layout_margin="@dimen/margin_10"
                android:background="@drawable/round_corner_gray"
                android:padding="@dimen/padding_15"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:visibility="gone"
                android:singleLine="true"
                android:textAlignment="viewStart"
                android:gravity="start|center_vertical"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@drawable/black_cursor"
                app:edittype="normal"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/cancel_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/image"
                android:padding="@dimen/padding_10"
                android:visibility="gone"
                android:src="@drawable/crosssss"
                app:layout_constraintEnd_toEndOf="@id/searchtext"
                app:layout_constraintTop_toTopOf="@id/searchtext"
                app:layout_constraintBottom_toBottomOf="@id/searchtext"/>
            <ProgressBar
                android:id="@+id/loader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/searchlist"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/margin_start_10"
                android:layout_marginEnd="@dimen/margin_end_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recentsearchsection" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sort"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/sorticon"
                app:rippleColor="@color/white"
                android:layout_margin="20dp"
                android:visibility="gone"
                android:contentDescription="@string/sort" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>