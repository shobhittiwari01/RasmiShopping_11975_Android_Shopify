<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        bind:layout_constraintStart_toStartOf="parent"
        bind:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/width_200"
            android:layout_height="@dimen/height_200"
            android:src="@drawable/grey_border"
            bind:layout_constraintStart_toStartOf="parent"
            bind:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_12"
            android:orientation="vertical"
            bind:layout_constraintBottom_toBottomOf="parent"
            bind:layout_constraintStart_toEndOf="@+id/imageView2"
            bind:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="@dimen/width_150"
                android:layout_height="@dimen/height_16"
                android:background="#dddddd" />

            <View
                android:layout_width="@dimen/width_80"
                android:layout_height="@dimen/height_16"
                android:layout_marginTop="@dimen/margin_top_5"
                android:background="#dddddd" />

            <View
                android:layout_width="@dimen/width_50"
                android:layout_height="@dimen/height_16"
                android:layout_marginTop="@dimen/margin_top_5"
                android:background="#dddddd" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>