<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="commondata"
            type="com.rasmishopping.app.basesection.models.CommanModel" />
        <variable
            name="stand"
            type="com.rasmishopping.app.homesection.models.StandAloneBanner" />
    </data>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/banner_layout"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/image_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:onClick="@{view->stand.navigateToPage(view,stand.bannertype,stand.bannerlink)}"
                app:layout_constraintDimensionRatio="H,7:3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:imageUrl="@{commondata.imageurl}"
                    android:adjustViewBounds="true"
                    android:tag="stand_alone_banner" />
            </androidx.cardview.widget.CardView>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonsection"
                android:weightSum="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:tag="middle"
                app:layout_constraintTop_toTopOf="@+id/image_layout"
                app:layout_constraintBottom_toBottomOf="@+id/image_layout"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/button_section_one"
                    android:layout_weight="0.5"
                    android:gravity="end"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="2dp"
                        android:id="@+id/one"
                        >
                        <com.rasmishopping.app.customviews.MageNativeTextView
                            android:id="@+id/button_one"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingStart="3dp"
                            android:paddingEnd="3dp"
                            android:textAllCaps="true"
                            android:onClick="@{view->stand.navigateToPage(view,stand.buttononetype,stand.buttononelink)}"
                            android:text="@{stand.text_one}"
                            app:texttype="standalonebannertext" />
                    </androidx.cardview.widget.CardView>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/button_section_two"
                    android:layout_weight="0.5"
                    android:gravity="start"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        app:cardCornerRadius="5dp"
                        android:layout_margin="2dp"
                        android:id="@+id/two"
                        >
                        <com.rasmishopping.app.customviews.MageNativeTextView
                            android:id="@+id/button_two"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingStart="3dp"
                            android:paddingEnd="3dp"
                            android:textAllCaps="true"
                            android:onClick="@{view->stand.navigateToPage(view,stand.buttontwotype,stand.buttontwolink)}"
                            android:text="@{stand.text_two}"
                            app:texttype="standalonebannertext" />
                    </androidx.cardview.widget.CardView>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:id="@+id/gap"
            android:background="@color/white"
            android:visibility="gone"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
